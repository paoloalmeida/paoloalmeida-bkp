# editorconfig.org
root = false

# All
[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Only html
[*.html]
indent_style = space
indent_size = 2

# Only css
[*.css]
indent_style = space
indent_size = 2

# Only js
[*.js]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
